@model CategoryVM

<form method="post" action="@Url.Action("SaveCategory", "Home", new { Area = Contextual.AreaName })">
    @{var returnUrl = ViewContext.RequestContext.HttpContext.Request.QueryString["ReturnUrl"];}
    <input type="hidden" name="ReturnUrl" value="@returnUrl" />
    <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
    <div class="row" style="width: 500px;">
        <div class="col-md-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label col-md-4">Name</label>
                        <div class="col-md-8">
                            <input type="text" name="CategoryName" class="form-control input-sm" value="@Model.CategoryName" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label col-md-4"></label>
                        <div class="col-md-8">
                            <button type="submit" class="btn">Save</button>
                            @if (!string.IsNullOrEmpty(returnUrl))
                            { <button type="button" class="btn" data-action="cancel" data-href="@returnUrl">Cancel</button>}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
