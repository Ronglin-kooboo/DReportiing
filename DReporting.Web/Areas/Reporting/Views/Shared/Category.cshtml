@model CategoryVM

<form method="post" action="@Url.Action("SaveCategory", "Home", new { Area = Consts.AreaName })">
    @{var returnUrl = System.Web.HttpContext.Current.Request.QueryString["ReturnUrl"];}
    <input type="hidden" name="ReturnUrl" value="@returnUrl" />
    <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
    <div class="row" style="width: 500px;">
        <div class="col-md-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label col-md-4">Name</label>
                        <div class="col-md-8">
                            <input type="text" name="CategoryName" class="form-control input-sm" value="@Model.CategoryName" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="control-label col-md-4"></label>
                        <div class="col-md-8">
                            <input type="submit" value="Save" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
