@model DReporting.Models.DesignerVM

<input type="text" id="txtReportName" value="@Model.ReportName" />

@Html.DevExpress().ReportDesigner(settings =>
{
    settings.Name = "designer";
    settings.SaveCallbackRouteValues = new { Area = "Reporting", Controller = "Design", Action = "Save", ReportId = Model.ReportId };
    settings.ClientSideEvents.SaveCommandExecute = "dreporting.designer.SaveCommandExecute";
    settings.ClientSideEvents.SaveCommandExecuted = "dreporting.designer.SaveCommandExecuted";
}).Bind(Model.DesignerModel).GetHtml()